{
  "name": "javlibrary",
  "version": "2.5.1",
  "description": "本地影视库管理系统",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:frontend\"",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "dev:frontend": "cd frontend && npm run dev",
    "prebuild": "npm run rebuild:sqlite3 || echo \"警告: sqlite3 重新编译失败，将使用现有版本或由 electron-builder 自动处理\"",
    "build": "npm run build:frontend && npm run build:electron",
    "build:quick": "npm run build:frontend && npm run build:electron",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "rebuild:sqlite3": "electron-rebuild -f -w sqlite3",
    "start": "electron ."
  },
  "keywords": [
    "electron",
    "javlibrary",
    "media-library"
  ],
  "author": "Achaiccccc",
  "license": "GPL-3.0",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.11",
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "iconv-lite": "^0.6.3",
    "js2xmlparser": "^5.0.0",
    "jschardet": "^3.0.0",
    "sequelize": "^6.35.2",
    "sharp": "^0.33.2",
    "sqlite3": "^5.1.7",
    "xml2js": "^0.6.2"
  }
}
